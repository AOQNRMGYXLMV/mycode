#include <cstdio>
#include <string>  
#include <algorithm>   
using namespace std;  
  
const int maxn = 100010;  
 
int num_left[20][maxn], seg[20][maxn],sa[maxn];

void Parti_build(int L, int R, int d)
{
    int M = (L + R) / 2, lsame = M - L + 1;
    for(int i=L; i<=R; i++)
        if(seg[d][i] < sa[M])
            lsame--;   
    int lpos = L, rpos = M+1;
    for(int i=L; i<=R; i++)
    {  
        if(i == L)
            num_left[d][i] = 0;  
        else  
            num_left[d][i] = num_left[d][i-1];
        if(seg[d][i] < sa[M] || (seg[d][i] == sa[M] && lsame))
        {
            num_left[d][i]++;
            seg[d+1][lpos++] = seg[d][i];
            if(seg[d][i] == sa[M]) lsame--;
        }
        else seg[d+1][rpos++] = seg[d][i];
    }  
    if(L < M) Parti_build(L, M, d+1);
    if(M+1 < R) Parti_build(M+1, R, d+1);
}

int find_rank(int qL, int qR, int L, int R, int d, int val)  
{  
    if(L == R) return seg[d][qL];  
    int M = (L + R) / 2;
    int cnt, cntl, cntr;
    if(qL == L)
        cntl = 0;
    else  
        cntl = num_left[d][qL-1];
    cntr = num_left[d][qR];
    cnt = cntr - cntl;
    if(cnt >= val)
        return find_rank(L+cntl, L+cntr-1, L, M, d+1, val);
    else
    {
        int _cntl = qL - L - cntl;
        int _cnt = qR - qL + 1 - cnt;
        int _cntr = qR - L + 1 - cntr;
        return find_rank(M+_cntl+1, M+_cntr, M+1, R, d+1,val-cnt);
    }  
}  
   
int main()  
{  
    int n,m,x,y,k;  

    scanf("%d%d",&n,&m);
    for(int i=1; i<=n; i++)  
    {  
        scanf("%d",&sa[i]);  
        seg[0][i] = sa[i];  
    }
    sort(sa + 1, sa + 1 + n);
    Parti_build(1, n, 0);
    while(m--)
    {
        scanf("%d%d%d",&x,&y,&k);
        printf("%d\n", find_rank(x, y, 1, n, 0, k));  
    }  
  
    return 0;  
}  
